

<div class="header">
  <h1>Numbers and letters</h1>
  <%= @letters %>
</div>

<div class="header">
  <h3>What is the longest word you can find?</h3>
</div>

<div class="container">
  <form action="/score" method="post" >
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="hidden" name="letters" class="submit-text" value='<%= @letters %>'>
    <input type="text" name="word" placeholder="What is your word?" class="submit-text">
    <input type="submit" class="submit-button" name="play" value="Play!">
  </form>
</div>


